{% extends 'base.html.twig' %}
{% block title 'Les coincoins du coin' %}
{% block body %}
    <div class="container mt-3">
        <span class="float-right">
            <a href="{{ app.request.headers.get('referer') }}" class="btn btn-primary"><i class="fas fa-arrow-circle-left"></i> Back</a>
            <a href="{{ path('quack.new') }}" class="btn btn-primary"><i class="fas fa-comment-alt"></i> New</a>
        </span>
        <h1>Quacks</h1>
        {% for flash in app.flashes('success') %}
            <div class="alert alert-success">
                {{ flash }}
            </div>
        {% endfor %}
        {% for flash in app.flashes('danger') %}
            <div class="alert alert-danger">
                {{ flash }}
            </div>
        {% endfor %}
        {% for quack in quacks %}
            {% include 'quack/_quack.html.twig' %}
        {% endfor %}
        <div class="pagination justify-content-center mt-5">
            {{ knp_pagination_render(quacks) }}
        </div>
    </div>
{% endblock %}

