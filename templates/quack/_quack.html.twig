<div class="card mb-2">
    <div class="card-header bg-success text-light">
        <form method="POST" action="{{ path('quack.delete', {id: quack.id}) }}" class="float-right" onsubmit="return confirm('Voulez vous vraiment Supprimer ce quack')">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quack.id) }}">
            <button class="btn btn-danger"><i class="fas fa-times-circle"></i></button>
        </form>
        <a href="{{ path('quack.edit', {id: quack.id}) }}" class="btn btn-warning mx-1 float-right"><i class="far fa-edit"></i></a>
        {% if val is defined and val is same as('show') %}
        {% else %}
            <a href="{{ path('quack.show', {id: quack.id}) }}" class="btn btn-info float-right"><i class="far fa-eye"></i></a>
            <h3>{{ quack.title }}</h3>
        {% endif %}
    </div>
    <div class="row no-gutters">
        <div class="col-md-2">
            {% if quack.imageFilename %}
                <img class="card-img-top thumbnail" src="{{ asset('images/quacks/' ~ quack.imageFilename) }}" alt="picture">
            {% else %}
                <img class="card-img-top thumbnail" src="{{ asset('/images/pictures/empty_quack.jpg') }}" alt="picture">
            {% endif %}
        </div>
        <div class="col-md-10">
            <div class="card-body">
                <p class="card-text">{{ quack.content | nl2br }}</p>
            </div>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between">
        <p class="text-capitalize blockquote-footer">Éditer par: {{ quack.author }}</p>
        <p class=""></p>
        <p class="blockquote-footer">Le : {{ quack.createAt | date("d-m-Y") }} à {{ quack.createAt | date("H:i") }}</p>
    </div>
</div>